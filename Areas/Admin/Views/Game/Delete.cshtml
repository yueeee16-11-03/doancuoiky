@using dona.Areas.Admin.Models
@using dona.Utilities;
@model dona.Model.tblGames
@{
    Layout="~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    }
    <main id="main" class="main">
        <div class="pagetitle">
            <h2> Confirm to delete a Game</h2>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="GameID">PathID</label>
                <input type="text" class="form-control mb-3"asp-for="GameID"disabled />
            </div>
            <div class="form-group col-md-6">
                <label asp-for="GameID">NamePath</label>
                <input type="text" class="form-control mb-3"asp-for="Title" disabled />
            </div>
        </div>
        <form asp-action="Delete" method="Post">
            <input type="hidden"asp-for="GameID" />
            <a class="btn btn-lg-btn-warning p-2 mr-5"href="javacript:history.back()">
                <i class="bi bi-arrow-left-circle"></i> Go back
            </a>
            <button type="submit" class="btn btn-lg btn-danger p-2">
                <i class="bi bi-trash"></i>Delete
            </button> 
        </form>
    </main>