@using dona.Areas.Admin.Models
@using dona.Utilities;
@model dona.Model.tblSkins
    
    @{
        Layout="~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    }
    <main id="main" class="main">
        <div class="pagetitle">
            <h4> Skill management >  Edit a new Skin</h4>
            <hr />
            <div class="row">
                <div class="col-md-12">
                    <form asp-action="Edit" method="Post">
                        <div class="form-group col-md-6 mb-3">
                            <label>  Menu Skill</label>
                            <input type="text" class ="form-control" asp-for="SkinID" type="hidden">
                            <select asp-for="ChampionsID" class="form-control"
                        asp-items="@(new SelectList(ViewBag.mnList,"Value","Text"))" id="ChampionsID"></select>
                        </div>  
                        <div class="form-group">
                            <label class="control-label">Name skills</label>
                            <input asp-for="Nameskin" class="form-control"/>
                            <span asp-validation-for="Nameskin" class="text-danger mb-4"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Description</label>
                            <textarea asp-for="Description" class="form-control" row="6"></textarea>
                            <span asp-validation-for="Description" class="text-danger mb-4"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Image</label>
                            <div class="input-group mb-3">
                            <div class="input-group-prepend">
                            <button class="btn btn-success" type="button" onclick="openDialog()">Choose an image</button>
                        </div>
                            <input type="text" class="form-control"asp-for="Images"id="file-input"
                        aria-describedby="button-addon2">
                        </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">author</label>
                            <textarea asp-for="author" class="form-control" ></textarea>
                            <span asp-validation-for="author" class="text-danger mb-4"></span>
                        </div>
<div class="form-group d-none">
    <input asp-for="createted_Date" class="form-control" value="@Functions.getCurrentDate()"/>
</div>

<div class="form-group">
    <label>
        @Html.CheckBox("IsActive",false)
        Visible
    </label>
</div>
<div class="form-group mt-5">
    <button type="submit" value="Edit" class="btn btn-primary"asp-action="Edit"
    onclick="return checkValue()">Sav Information</button>
</div>
                    </form>
                </div>
            </div>
        </div>
    </main>
    @{
        var SummerNote=new dona.Areas.Admin.Models.SummerNote("#Contents");
        <partial name="_SummerNote" model="SummerNote"/>
    }