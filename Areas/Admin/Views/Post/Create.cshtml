@using dona.Areas.Admin.Models
@using dona.Utilities;
@model dona.Models.tblPost
    
    @{
        Layout="~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    }
    <main id="main" class="main">
        <div class="pagetitle">
            <h4> Post management >  Add a new Post</h4>
            <hr />
            <div class="row">
                <div class="col-md-12">
                    <form asp-action="Create" method="Post">
                        <div class="form-group col-md-6 mb-3">
                            <label> Menu Name</label>
                            <select asp-for="MenuID" class="form-control"
                        asp-items="@(new SelectList(ViewBag.mnList,"Value","Text"))" id="MenuID"></select>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Title</label>
                            <input asp-for="Title" class="form-control"/>
                            <span asp-validation-for="Title" class="text-danger mb-4"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Abstract</label>
                            <textarea asp-for="Abstract" class="form-control" row="6"></textarea>
                            <span asp-validation-for="Abstract" class="text-danger mb-4"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Image</label>
                            <div class="input-group mb-3">
                            <div class="input-group-prepend">
                            <button class="btn btn-success" type="button" onclick="openDialog()">Choose an image</button>
                        </div>
                            <input type="text" class="form-control"asp-for="Images"id="file-input"
                        aria-describedby="button-addon2">
                        </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Content</label>
                            <textarea asp-for="Contents" class="form-control" ></textarea>
                            <span asp-validation-for="Contents" class="text-danger mb-4"></span>
                        </div>
<div class="form-group d-none">
    <input asp-for="createted_Date" class="form-control" value="@Functions.getCurrentDate()"/>
</div>
<div class="form-group d-none">
    <input asp-for="PostOrder" class="form-control" value="0"/>
</div>
<div class="form-group">
    <label>
        @Html.CheckBox("IsActive",false)
        Visible
    </label>
</div>
<div class="form-group mt-5">
    <button type="submit" value="Create" class="btn btn-primary"asp-action="Create"
    onclick="return checkValue()">Sav Information</button>
</div>
                    </form>
                </div>
            </div>
        </div>
    </main>
    @{
        var SummerNote=new dona.Areas.Admin.Models.SummerNote("#Contents");
        <partial name="_SummerNote" model="SummerNote"/>
    }