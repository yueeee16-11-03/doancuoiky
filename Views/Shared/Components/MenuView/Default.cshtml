                </div>
            </div>
            <div class="col-7 col-md-9 text-end position-static">
                <nav class="main-menu menu-sticky1 d-none d-lg-block link-inherit">
                    <ul>
                        @foreach(var menu in Model.Where(m => m.Levels == 1).OrderBy(m => m.MenuOrder))
                        {
                            string url=Functions.TitleSlugGeneration("menu",menu.MenuName,menu.MenuID);
                            
                            var pID = menu.MenuID;
                            var sMenu = Model.Where(s => s.ParentID == pID).OrderBy(s => s.MenuOrder).ToList();
                            <li class="menu-item-has-children">
                                <a asp-controller="@menu.ControllerName" asp-action="@menu.ActionName">@menu.MenuName</a>
                                
                                @if (sMenu.Any())
                                {
                                    <ul class="sub-menu">
                                        @foreach (var smn in sMenu)
                                        {
                                            <li><a asp-controller="@menu.ControllerName" asp-action="@menu.ActionName">@menu.MenuName >@smn.MenuName</a></li>
                                        }
                                    </ul>
                                }
                            </li>
                        }
                    </ul>
                </nav>
                <button class="vs-menu-toggle text-theme border-theme d-inline-block d-lg-none"><i class="far fa-bars"></i></button>
            </div>
        </div>
    </div>
